
@model Inspinia_MVC5.Models.Usuario_Model
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>TASKS | Registry</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h2 class="logo-name">TASKS</h2>
            </div>

            <h3>Bem vindo ao TASKS</h3>

            <form id="form_registro" method="post">
                <div class="form-group">
                    @*<input type="file" class="form-control" placeholder="Senha" required style="display:none" id="fileAnexo">
            <button type="button" class="btn btn-secondary block full-width m-b" id="btn_add" name="btn_add">Adicionar um Foto</button>*@


                    <input type="file" name="fileUploaderControlCNH" id="fileUploaderControlCNH" style="display:none;" accept=".jpeg, .jpg">
                    <img class="caixa-upload rounded-circle" id="MyProfileImageCNH" name="MyProfileImageCNH" src="~/Images/fotoaqui.png" height="120" width="120" style="cursor:pointer" />



                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" required id="Usu_Nome" name="Usu_Nome">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="E-mail" required id="Usu_Email" name="Usu_Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Senha" required id="Usu_Senha" name="Usu_Senha">
                </div>

                <br />
                <button type="button" class="btn btn-primary block full-width m-b" id="btn_registrar" data-request-url="@Url.Action("Registar", "Login")">Registar</button>

                <p class="text-muted text-center"><small>Já tem uma conta?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Login", "Login")">Logar</a>

            </form>
            
        </div>
    </div>

</body>

</html>
<!-- Section for main scripts render -->

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/plugins/touchPunch")
@Scripts.Render("~/plugins/typehead")
@Scripts.Render("~/plugins/validate")
@Scripts.Render("~/plugins/summernote")
<script src="~/Scripts/notiflix-aio-2.1.3.min.js"></script>
<script src="~/Scripts/Rotina_Basica.js"></script>
<script src="~/Scripts/tasks/Login.js"></script>





