
@model Inspinia_MVC5.Models.Usuario_Model
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Tarefa | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">
    
    <div id="validacao" ></div>

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h2 class="logo-name">TASKS</h2>
            </div>


            <h3>Bem vindo ao TASKS</h3>
            <p>
                @*Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.*@
            </p>
            @*<p>Login in. To see it in action.</p>*@
            <form class="m-t" method="post" id="form_login">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="E-mail" id="Usu_Email" name="Usu_Email" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Senha" id="Usu_Senha" name="Usu_Senha" required>
                </div>
                <button type="button" class="btn btn-primary block full-width m-b" id="btn_login" data-request-url="@Url.Action("ValidarAcesso", "Login")">Login</button>

                <a href="#"><small>Esqueceu a senha?</small></a>
                <br />
                <br />
                <p class="text-muted text-center"><small>Não tem uma conta?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Registro", "Login")">Criar uma conta</a>
            </form>
            @*<p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2015</small> </p>*@
        </div>
    </div>

</body>

</html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/plugins/touchPunch")
@Scripts.Render("~/plugins/typehead")
@Scripts.Render("~/plugins/validate")
@Scripts.Render("~/plugins/summernote")
<script src="~/Scripts/notiflix-aio-2.1.3.min.js"></script>
<script src="~/Scripts/Rotina_Basica.js"></script>
<script src="~/Scripts/preload.js"></script>
<script src="~/Scripts/tasks/Login.js"></script>


